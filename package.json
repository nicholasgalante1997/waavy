{
  "name": "waavy",
  "description": "A library to support rendering React components like in any server environment, not just javascript runtimes.",
  "version": "0.1.1",
  "type": "module",
  "files": [
    "package.json",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --write lib",
    "lint": "eslint lib",
    "check-types": "tsc -p tsconfig.json",
    "bundle:cli:js": "bun run build.ts",
    "bundle:cli:executable-linux-x64-modern": "bun build --compile --minify --sourcemap --bytecode --target=bun-linux-x64-modern lib/cli.tsx --outfile=out/waavy-linux-x64-modern",
    "bundle:cli:executable-linux-x64-baseline": "bun build --compile --minify --sourcemap --bytecode --target=bun-linux-x64-baseline lib/cli.tsx --outfile=out/waavy-linux-x64-baseline",
    "bundle:cli:executable-macos-x64": "bun build --compile --minify --sourcemap --bytecode --target=bun-darwin-x64 lib/cli.tsx --outfile=out/waavy-macos-x64",
    "bundle:cli:executable-macos-arm64": "bun build --compile --minify --sourcemap --bytecode --target=bun-darwin-arm64 lib/cli.tsx --outfile=out/waavy-macos-arm64",
    "bundle:cli:executable-linux-arm64": "bun build --compile --minify --sourcemap --bytecode --target=bun-linux-arm64 lib/cli.tsx --outfile=out/waavy-linux-arm64",
    "bundle:cli:executable-windows-x64-modern": "bun build --compile --minify --sourcemap --bytecode --target=bun-windows-x64-modern lib/cli.tsx --outfile=out/waavy-windows-x64-modern",
    "bundle:cli:executable-windows-x64-baseline": "bun build --compile --minify --sourcemap --bytecode --target=bun-windows-x64-baseline lib/cli.tsx --outfile=out/waavy-windows-x64-baseline",
    "build": "run-s check-types bundle:cli:*",
    "test": "bun test"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "packageManager": "bun@1.1.34",
  "peerDependencies": {
    "react": "^19.0.0-rc-5b0ef217-20241202",
    "react-dom": "^19.0.0-rc-5b0ef217-20241202",
    "@tanstack/react-query": "^5.62.3",
    "typescript": "^5.7.2"
  },
  "optionalDependencies": {
    "@tanstack/react-query-devtools": "^5.62.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@eslint/js": "^9.16.0",
    "@tanstack/react-query": "^5.62.2",
    "@tanstack/react-query-devtools": "^5.62.3",
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/react": "19",
    "@types/react-dom": "19",
    "debug": "^4.4.0",
    "eslint": "^9.16.0",
    "globals": "^15.12.0",
    "node-emoji": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "^19.0.0-rc-5b0ef217-20241202",
    "react-dom": "^19.0.0-rc-5b0ef217-20241202",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "commander": "^12.1.0"
  }
}
