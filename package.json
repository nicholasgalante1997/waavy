{
  "name": "waavy",
  "description": "A library to support rendering React components like in any server environment, not just javascript runtimes.",
  "version": "0.1.4",
  "type": "module",
  "bin": {
    "waavy": "bin/waavy.js"
  },
  "files": [
    "bin/waavy.js",
    "out/browser.js",
    "out/browser.js.map",
    "out/server.js",
    "out/server.js.map",
    "out/lib/",
    "post-install.js",
    "package.json",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./browser": {
      "default": "./out/browser.js",
      "import": "./out/browser.js",
      "types": "./out/lib/exports/browser.d.ts"
    },
    "./server": {
      "default": "./out/server.js",
      "import": "./out/server.js",
      "types": "./out/lib/exports/server.d.ts"
    },
    "./package.json": "./package.json"
  },
  "readme": "README.md",
  "keywords": ["react", "server-rendering", "ssr", "waavy"],
  "author": "Nick G. <rustycloud42@protonmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nicholasgalante1997/waavy#readme",
  "bugs": {
    "url": "https://github.com/nicholasgalante1997/waavy/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/nicholasgalante1997"
  },
  "scripts": {
    "postinstall": "node post-install.js",
    "clean": "rm -rf out",
    "format": "prettier --write lib",
    "lint": "eslint lib",
    "check-types": "tsc -p tsconfig.json",
    "bundle": "DEBUG=waavy:* bun run build.ts --all --verbose",
    "bundle:verbose": "bun run bundle -- --verbose",
    "bundle:all": "bun run bundle -- --all",
    "prebuild": "run-s clean test",
    "build": "run-s check-types bundle",
    "test": "bun test"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "packageManager": "bun@1.2.15",
  "engines": {
    "bun": ">=1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicholasgalante1997/waavy"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "debug": "4.4.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@tanstack/react-query": "^5.62.3",
    "@tanstack/react-query-devtools": "^5.62.3"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "@tanstack/react-query": {
      "optional": true
    },
    "@tanstack/react-query-devtools": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@eslint/js": "^9.16.0",
    "@tanstack/react-query": "^5.62.2",
    "@tanstack/react-query-devtools": "^5.62.3",
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/react": "19",
    "@types/react-dom": "19",
    "eslint": "^9.16.0",
    "globals": "^15.12.0",
    "node-emoji": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
